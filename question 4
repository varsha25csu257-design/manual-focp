#include <iostream>
using namespace std;

int main() {
    int item_no, quantity;
    float unit_price, total_amount, discount, final_amount;

    // Taking input
    cout << "Enter item number: ";
    cin >> item_no;

    cout << "Enter quantity: ";
    cin >> quantity;

    cout << "Enter unit price: ";
    cin >> unit_price;

    // Calculating total amount
    total_amount = quantity * unit_price;

    // Calculating 20% discount
    discount = total_amount * 0.20;

    // Final amount after discount
    final_amount = total_amount - discount;

    // Displaying bill
    cout << "\nItem Number: " << item_no;
    cout << "\nTotal Amount: " << total_amount;
    cout << "\nDiscount (20%): " << discount;
    cout << "\nFinal Bill Amount: " << final_amount;

    return 0;
}
